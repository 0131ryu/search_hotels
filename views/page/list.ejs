<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Hello, world!</title>
  </head>
  <body>
    <%- include ('../layouts/header') %>
    <h2>숙소 리스트</h2>

    <div class="container input-group mb-2 search-input-form">
      <input class="form-control search-input" id="search-input" />
      <button
        class="input-group-append btn btn-danger search-input-btn"
        id="search"
      >
        검색
      </button>
    </div>

    <ul class="list-group">
      <% for (var i = 0; i< posts.length; i++) { %>
      <li class="list-group-item">
        <img src="image/mainImg1.jpg" style="width: 200px; height: 200px" />
        <p>글 번호 : <%= posts[i]._id %></p>
        <h4><a href="/detail/<%=posts[i]._id %>"><%= posts[i].title %></a></h4>
        <p><%= posts[i].type %></p>
        <p>가격 : <%=posts[i].stayCost %></p>
        <p>
          특징들 : <%= posts[i].stayNum %>명 / 아이동반 : <%= posts[i].stayChild
          %> / 어르신동반 : <%= posts[i].staySeinor %> / 침대 여부 : <%=
          posts[i].stayBed %> / 기타 특징 : <%= posts[i].stayMost %>
        </p>
        <p><%= posts[i].date %></p>
        <p><%= posts[i].detail %></p>
        <button class="delete" data-id="<%= posts[i]._id %>">삭제하기</button>
        <button>
          <a href="/edit/<%=posts[i]._id %>" class="editBtn">수정하기</a>
        </button>
        <button class="btn btn-secondary chat" data-id="<%= posts[i].writer %>">
          채팅하기
        </button>
      </li>
      <% } %>
    </ul>

    <!-- ejs 내 js 사용법 : <% %> 붙이기-->

    <!--ajax 사용하기-->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <script>
      $(".delete").click(function (e) {
        $.ajax({
          method: "DELETE",
          url: "/delete",
          data: { _id: e.target.dataset.id },
        })
          .done(function (result) {
            //성공시
            location.reload();
          })
          .faile(function (err) {
            //실패시
            return console.log(err);
          });
      });

      //글 검색
      $("#search").click(function () {
        //value 안에 input에 입력한 값 넣기
        var inputValue = $("#search-input").val();
        window.location.replace("/search?value=" + inputValue); //현재 페이지 url 바꾸는 법
      });

      //채팅
      $(".chat").click(function (e) {
        var _id = e.target.dataset.id;
        $.post("/chatroom", { receiveId: _id }).then(() => {
          console.log("채팅방 게시물 생성 완료");
        });
      });
    </script>

    <%- include ("../layouts/footer") %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
