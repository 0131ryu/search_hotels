<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- 달력 API -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
      integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"
      integrity="sha512-uto9mlQzrs59VwILcLiRYeLKPPbS/bT71da/OEBYEwcdNUk8jYIy+D176RYoop1Da+f9mvkYrmj5MCLZWEtQuA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css"
      integrity="sha512-aOG0c6nPNzGk+5zjwyJaoRUgCdOrfSDhmMID2u4+OIslr0GjpLKo7Xm0Ao3xmpM4T8AmIouRkqwj1nrdVsLKEQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Hello, world!</title>
  </head>
  <body>
    <%- include ('../layouts/header') %>

    <h4 class="container mt-4"><strong>글 작성페이지</strong></h4>

    <div class="container mt-3">
      <form method="POST" action="/upload" enctype="multipart/form-data">
        <input type="file" name="hotels" />
        <button type="submit">이미지저장</button>
      </form>

      <div class="container mt-3">
        <form action="/write_process" method="POST">
          <div class="form-group">
            <label>호텔 이름</label>
            <input type="text" class="form-control" name="title" />
          </div>
          <div class="form-group">
            <label>숙소 종류</label>
            <input type="text" id="stayTypeList" value="호텔" name="type" />
            <input type="button" onclick="stayType('호텔')" value="호텔" />
            <input type="button" onclick="stayType('모텔')" value="모텔" />
            <input type="button" onclick="stayType('펜션')" value="펜션" />
            <input type="button" onclick="stayType('리조트')" value="리조트" />
          </div>
          <div class="form-group">
            <label>머무는 사람 수 </label>
            <input type="text" id="searchType_num" value="1" name="stayNum" />
            <input type="button" onclick="searchType_stayNum(1)" value="1명" />
            <input type="button" onclick="searchType_stayNum(2)" value="2명" />
            <input type="button" onclick="searchType_stayNum(3)" value="3명" />
            <input type="button" onclick="searchType_stayNum(4)" value="4명" />
            <input
              type="button"
              onclick="searchType_stayNum(5)"
              value="5명 이상"
            />
          </div>
          <div class="form-group">
            <label>아이 동반 여부</label>
            <input
              type="text"
              id="searchType_childYN"
              value="네"
              name="stayChild"
            />
            <input type="button" onclick="searchType_child('네')" value="네" />
            <input
              type="button"
              onclick="searchType_child('아니오')"
              value="아니오"
            />
            <label>어르신 동반 여부</label>
            <input
              type="text"
              id="searchType_seniorYN"
              value="네"
              name="staySeinor"
            />
            <input type="button" onclick="searchType_senior('네')" value="네" />
            <input
              type="button"
              onclick="searchType_senior('아니오')"
              value="아니오"
            />
          </div>
          <div class="form-group">
            <label>숙소 종류</label>
            <input
              type="text"
              id="searchType_beds"
              value="싱글"
              name="stayBed"
            />
            <input
              type="button"
              onclick="searchType_bed('싱글')"
              value="싱글"
            />
            <input
              type="button"
              onclick="searchType_bed('더블')"
              value="더블"
            />
            <input
              type="button"
              onclick="searchType_bed('트윈')"
              value="트윈"
            />
          </div>
          <div class="form-group">
            <label>숙소 가격</label>
            <input
              type="text"
              id="searchType_costs"
              value="50000"
              name="stayCost"
            />
          </div>
          <div class="form-group">
            <label>숙소 관련 우선 순위</label>
            <input
              type="text"
              id="searchType_mosts"
              value="근처 편의시설 여부"
              name="stayMost"
            />
            <input
              type="button"
              onclick="searchType_most('근처 편의시설 여부')"
              value="근처 편의시설 여부"
            />
            <input
              type="button"
              onclick="searchType_most('좋은 경치와 전망')"
              value="좋은 경치와 전망"
            />
            <input
              type="button"
              onclick="searchType_most('다중이용시설 여부')"
              value="다중이용시설 여부"
            />
          </div>
          <div class="form-group">
            <label>날짜</label>
            <input type="text" class="datepicker" name="date" />
          </div>
          <div class="form-group">
            <label>상세정보</label>
            <input type="text" class="form-control" name="detail" />
          </div>
          <button type="submit" class="btn btn-outline-secondary">
            Submit
          </button>
        </form>
      </div>
    </div>
    <input
      type="submit"
      id="valueId"
      VALUE="제출"
      onClick="checkRow(this.form.valueId.value)"
      )
    />
    <%- include ("../layouts/footer") %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <script>
      $(function () {
        $(".datepicker").datepicker();
      });

      $.datepicker.setDefaults({
        dateFormat: "yy-mm-dd",
        prevText: "이전 달",
        nextText: "다음 달",
        monthNames: [
          "1월",
          "2월",
          "3월",
          "4월",
          "5월",
          "6월",
          "7월",
          "8월",
          "9월",
          "10월",
          "11월",
          "12월",
        ],
        monthNamesShort: [
          "1월",
          "2월",
          "3월",
          "4월",
          "5월",
          "6월",
          "7월",
          "8월",
          "9월",
          "10월",
          "11월",
          "12월",
        ],
        dayNames: ["일", "월", "화", "수", "목", "금", "토"],
        dayNamesShort: ["일", "월", "화", "수", "목", "금", "토"],
        dayNamesMin: ["일", "월", "화", "수", "목", "금", "토"],
        showMonthAfterYear: true,
        yearSuffix: "년",
      });

      function stayType(x) {
        return (document.getElementById("stayTypeList").value = x);
      }

      function searchType_stayNum(x) {
        return (document.getElementById("searchType_num").value = x);
      }

      function searchType_child(x) {
        return (document.getElementById("searchType_childYN").value = x);
      }

      function searchType_senior(x) {
        return (document.getElementById("searchType_seniorYN").value = x);
      }

      function searchType_bed(x) {
        return (document.getElementById("searchType_beds").value = x);
      }

      function searchType_most(x) {
        return (document.getElementById("searchType_mosts").value = x);
      }
    </script>
